<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/green_white"
                android:centerColor="@color/green_white"
                android:endColor="@color/green_medium_dark"
                android:angle="-45"
                />
            <corners android:radius="8sp" />
        </shape>
    </item>
    <item
        android:left="2sp"
        android:right="2sp"
        android:top="2sp"
        android:bottom="2sp">
        <shape android:shape="rectangle">
            <solid android:color="@color/green_medium_dark" />
            <corners android:radius="6sp" />
        </shape>
    </item>
</layer-list>