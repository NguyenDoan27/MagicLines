<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#79f1b4"
                android:centerColor="#79f1b4"
                android:endColor="#3baa58"
                android:angle="-45"
                />
            <corners android:radius="8sp" />
        </shape>
    </item>
    <item
        android:left="2sp"
        android:right="2sp"
        android:top="2sp"
        android:bottom="2sp">
        <shape android:shape="rectangle">
            <solid android:color="#3baa58" />
            <corners android:radius="6sp" />
        </shape>
    </item>
</layer-list>