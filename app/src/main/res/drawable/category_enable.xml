                android:startColor="#B6116B"
                android:endColor="#2E1371"
                android:angle="-45"/>
            <corners android:radius="10dp"/>
            <padding android:right="5sp"
                android:left="5sp"
                android:top="5sp"
                android:bottom="5sp"/>
        </shape>
    </item>
