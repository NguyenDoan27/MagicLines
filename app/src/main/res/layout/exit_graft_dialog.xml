<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/exit_dialog_background">
    <ImageView
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:id="@+id/ivExitGraft"
        android:src="@drawable/settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24sp"
        />
    <TextView
        android:id="@+id/tvExitGraft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit the graft?"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivExitGraft"
        android:layout_marginTop="19dp"/>
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your progress will be lost"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvExitGraft"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCancel"
        android:layout_width="101sp"
        android:layout_height="40sp"
        android:text="No, stay"
        android:textColor="@color/white"
        android:background="@drawable/button_on_exit_dialog_background"
        app:layout_constraintTop_toBottomOf="@id/tv_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnEit"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="19sp"
        android:layout_marginBottom="33sp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEit"
        android:layout_width="101sp"
        android:layout_height="40sp"
        android:text="Yes, exit"
        android:textColor="@color/white"
        android:background="@drawable/button_on_exit_dialog_background"
        app:layout_constraintTop_toBottomOf="@id/tv_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnCancel"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="33sp"
        android:layout_marginTop="19sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>