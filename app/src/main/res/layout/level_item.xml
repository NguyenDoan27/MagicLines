<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout"
        android:layout_width="169sp"
        android:layout_height="225sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="12sp"
        app:cardBackgroundColor="@color/dark_blue"
        android:layout_marginVertical="12sp"
        >
        <TextView
            android:id="@+id/tvNumLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="64sp"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/imgItemLevel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </com.google.android.material.card.MaterialCardView>
    <ImageView
        android:id="@+id/imgLeftStar"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:src="@drawable/favourites"
        app:layout_constraintEnd_toStartOf="@id/imgCenterStar"
        app:layout_constraintTop_toBottomOf="@id/layout"
        android:layout_marginTop="-15sp"
        android:elevation="2sp"
        />
    <ImageView
        android:id="@+id/imgCenterStar"
        android:layout_width="32sp"
        android:layout_height="32sp"
        android:src="@drawable/favourites"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout"
        android:layout_marginTop="-25sp"
        android:elevation="2sp"
        />
    <ImageView
        android:id="@+id/imgRightStar"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:src="@drawable/favourites"
        app:layout_constraintStart_toEndOf="@id/imgCenterStar"
        app:layout_constraintTop_toBottomOf="@id/layout"
        android:layout_marginTop="-15sp"
        android:elevation="2sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>