<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300sp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/light_blue"
    app:cardCornerRadius="25sp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imgVictory"
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:src="@drawable/victory"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:id="@+id/imgCenterStar"
            android:layout_width="48sp"
            android:layout_height="48sp"
            android:src="@drawable/favourites"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30sp"
            />
        <ImageView
            android:id="@+id/imgRightStar"
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:src="@drawable/favourites"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgCenterStar"
            android:layout_marginTop="48sp"
            />
        <ImageView
            android:id="@+id/imgLeftStar"
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:src="@drawable/favourites"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imgCenterStar"
            android:layout_marginTop="48sp"
            />
        <TextView
            android:id="@+id/tvFinishTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1:1:1"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/imgVictory"
            />
        <TextView
            android:id="@+id/tvPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1"
            android:textSize="32sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgVictory"
            android:layout_marginTop="12sp"
            android:layout_marginEnd="24sp"/>
        <ImageView
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:src="@drawable/bolt"
            app:layout_constraintTop_toBottomOf="@id/imgVictory"
            app:layout_constraintStart_toEndOf="@id/tvPlus"
            android:layout_marginTop="18sp"
            android:layout_marginStart="8sp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnContinue"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="@string/button_continue"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPlus"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="8sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>