<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_app1"
    tools:context=".ui.showCollection.ShowCollectionFragment">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:src="@drawable/left_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="17sp"
        />
    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:src="@drawable/delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="17sp"
        />
    <ImageView
        android:id="@+id/ivShowCollection"
        android:layout_width="0sp"
        android:layout_height="0sp"
        app:layout_constraintDimensionRatio="3:4.5"
        android:background="@drawable/showing_collection_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="24sp"
        android:layout_marginTop="12sp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDownload"
        android:layout_width="154sp"
        android:layout_height="50sp"
        android:text="@string/download"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#50E577"
        android:textAllCaps="false"
        android:background="@drawable/button_download_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnShare"
        app:layout_constraintTop_toBottomOf="@id/ivShowCollection"
        android:layout_marginTop="42sp"
        android:layout_marginBottom="102sp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnShare"
        android:layout_width="154sp"
        android:layout_height="50sp"
        android:text="@string/share"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@drawable/button_on_exit_dialog_background"
        app:layout_constraintStart_toEndOf="@id/btnDownload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivShowCollection"
        android:layout_marginTop="42sp"
        android:textAllCaps="false"
        android:layout_marginBottom="102sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>