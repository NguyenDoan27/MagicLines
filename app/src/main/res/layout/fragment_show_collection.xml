<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/button_on_exit_dialog_background"
    tools:context=".fragments.ShowCollectionFragment">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="32sp"
        android:layout_height="32sp"
        android:src="@drawable/left_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="17sp"/>
    <ImageView
        android:id="@+id/ivShowCollection"
        android:layout_width="323sp"
        android:layout_height="437sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="65sp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDownload"
        android:layout_width="154sp"
        android:layout_height="50sp"
        android:text="@string/download"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/button_on_exit_dialog_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnShare"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="164sp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnShare"
        android:layout_width="154sp"
        android:layout_height="50sp"
        android:text="@string/share"
        android:textColor="@color/white"
        android:background="@drawable/button_on_exit_dialog_background"
        app:layout_constraintStart_toEndOf="@id/btnDownload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="23sp"
        android:textAllCaps="false"
        android:layout_marginBottom="164sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>