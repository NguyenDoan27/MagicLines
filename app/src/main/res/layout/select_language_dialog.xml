<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ocean_blue"
    android:padding="12sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tvLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/language"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/sunset_orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_vietnamese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/language_selection"
        android:orientation="horizontal"
        android:layout_marginTop="12sp"
        app:layout_constraintTop_toBottomOf="@id/tvLanguage">
        <ImageView
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:src="@drawable/vietnam"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiếng Việt"
            android:layout_gravity="center"
            android:layout_marginStart="12sp"
            android:textColor="@color/sunset_orange"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_english"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/language_selection"
        android:orientation="horizontal"
        android:layout_marginTop="12sp"
        app:layout_constraintTop_toBottomOf="@id/layout_vietnamese">
        <ImageView
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:src="@drawable/united_kingdom"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:layout_gravity="center"
            android:layout_marginStart="12sp"
            android:textColor="@color/sunset_orange"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>